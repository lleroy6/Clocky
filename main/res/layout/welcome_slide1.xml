<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">



        <ImageView
            android:id="@+id/ic_launcher_headless"
            android:src="@drawable/ic_launcher_headless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/ic_launcher_hammers"
            android:src="@drawable/ic_launcher_hammers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/ic_launcher_hour"
            android:src="@drawable/ic_launcher_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/ic_launcher_minute"
            android:src="@drawable/ic_launcher_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ic_launcher_headless"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textAppearance="@android:style/TextAppearance.Large" />
    </RelativeLayout>
</RelativeLayout>